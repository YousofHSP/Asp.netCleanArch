@using CleanArch.Application.ViewModels.Account
@model RegisterViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>
<hr />

<div class="row">
    <div class="col-md-12">
        @if(ViewBag.Check != null){
            CheckUser check = (CheckUser) ViewBag.Check;

            switch(check)
            {
                case CheckUser.UsernameNotValid:
                {
                    <div class="alert alert-danger">
                        <ul>
                            <li>Username Not Valid</li>
                        </ul>
                    </div>
                    break;
                }
                case CheckUser.EmailNotValid:
                {
                    <div class="alert alert-danger">
                        <ul>
                            <li>Email Not Valid</li>
                        </ul>
                    </div>
                    break;
                }
            }
        }
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="RePassword" class="form-label"></label>
                <input asp-for="RePassword" class="form-control" />
                <span asp-validation-for="RePassword" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <input type="submit" class="btn btn-primary mt-3" value="Register" />
            </div>
        </form>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }